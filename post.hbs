{{!< default}}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <time class="post-date" datetime="{{date format='YYYY-MM-DDTHH:mm:ssZ'}}">{{date format="DD MMMM YYYY"}}</time>
            </section>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <hr>

        <footer class="post-footer">
            <section class="author">
                <p>Published by {{author}} under {{tags}}.</p>
            </section>
        </footer>

    </article>
</main>

<nav>
    <ul class="pager">
        {{#prev_post}}
        <li class="previous"><a href="{{url}}"><span aria-hidden="true">&larr;</span> {{title}}</a></li>
        {{/prev_post}}

        {{#next_post}}
        <li class="next"><a href="{{url}}">{{title}} <span aria-hidden="true">&rarr;</span></a></li>
        {{/next_post}}
    </ul>
</nav>

{{/post}}
